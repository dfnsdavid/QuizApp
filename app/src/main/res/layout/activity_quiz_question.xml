<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    tools:context="com.example.android.quizapp.quiz_question">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_field_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-dark"
            android:text=""
            android:textSize="24sp" />

        <View style="@style/ViewAttributes" />

        <TextView
            style="@style/TextViewAttribute"
            android:text="Q1. How many Continents do we have?" />

        <RadioGroup
            android:id="@+id/radio_group_question_one"
            style="@style/RadioGroupAttribute"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio_group_question_one_id_one"
                style="@style/RadioButtonAttribute"
                android:onClick="onRadioGroupOneRadioButtonClicked"
                android:text="Seven" />

            <RadioButton
                android:id="@+id/radio_group_question_one_id_two"
                style="@style/RadioButtonAttribute"
                android:onClick="onRadioGroupOneRadioButtonClicked"
                android:text="Eight" />

            <RadioButton
                android:id="@+id/radio_group_question_one_id_three"
                style="@style/RadioButtonAttribute"
                android:onClick="onRadioGroupOneRadioButtonClicked"
                android:text="Five" />

            <RadioButton
                android:id="@+id/radio_group_question_one_id_four"
                style="@style/RadioButtonAttribute"
                android:onClick="onRadioGroupOneRadioButtonClicked"
                android:text="Thirty-Six" />
        </RadioGroup>

        <View style="@style/ViewAttributes" />

        <TextView
            style="@style/TextViewAttribute"
            android:text="Q2. Nigeria is part of which Continent?" />

        <RadioGroup
            android:id="@+id/radio_group_question_two"
            style="@style/RadioGroupAttribute"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio_group_question_two_id_one"
                style="@style/RadioButtonAttribute"
                android:onClick="onRadioGroupTwoRadioButtonClicked"
                android:text="Europe" />

            <RadioButton
                android:id="@+id/radio_group_question_two_id_two"
                style="@style/RadioButtonAttribute"
                android:onClick="onRadioGroupTwoRadioButtonClicked"
                android:text="Africa" />

            <RadioButton
                android:id="@+id/radio_group_question_two_id_three"
                style="@style/RadioButtonAttribute"
                android:onClick="onRadioGroupTwoRadioButtonClicked"
                android:text="Asia" />

            <RadioButton
                android:id="@+id/radio_group_question_two_id_four"
                style="@style/RadioButtonAttribute"
                android:onClick="onRadioGroupTwoRadioButtonClicked"
                android:text="UAE" />
        </RadioGroup>

        <View style="@style/ViewAttributes" />

        <TextView
            style="@style/TextViewAttribute"
            android:text="Q3. Who is the President of Russia?" />

        <RadioGroup
            android:id="@+id/radio_group_question_three"
            style="@style/RadioGroupAttribute"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio_group_question_three_id_one"
                style="@style/RadioButtonAttribute"
                android:onClick="onRadioGroupThreeRadioButtonClicked"
                android:text="Alexei Nikolaevich" />

            <RadioButton
                android:id="@+id/radio_group_question_three_id_two"
                style="@style/RadioButtonAttribute"
                android:onClick="onRadioGroupThreeRadioButtonClicked"
                android:text="Felix Yusupov" />

            <RadioButton
                android:id="@+id/radio_group_question_three_id_three"
                style="@style/RadioButtonAttribute"
                android:onClick="onRadioGroupThreeRadioButtonClicked"
                android:text="Vladimir Putin" />

            <RadioButton
                android:id="@+id/radio_group_question_three_id_four"
                style="@style/RadioButtonAttribute"
                android:onClick="onRadioGroupThreeRadioButtonClicked"
                android:text="Donald Trump" />
        </RadioGroup>

        <View style="@style/ViewAttributes" />

        <TextView
            style="@style/TextViewAttribute"
            android:text="Q4. Who is the President of Nigeria?" />

        <RadioGroup
            android:id="@+id/radio_group_question_four"
            style="@style/RadioGroupAttribute"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio_group_question_four_id_one"
                style="@style/RadioButtonAttribute"
                android:onClick="onRadioGroupFourRadioButtonClicked"
                android:text="Jonathan Obi" />

            <RadioButton
                android:id="@+id/radio_group_question_four_id_two"
                style="@style/RadioButtonAttribute"
                android:onClick="onRadioGroupFourRadioButtonClicked"
                android:text="Funke Akindele" />

            <RadioButton
                android:id="@+id/radio_group_question_four_id_three"
                style="@style/RadioButtonAttribute"
                android:onClick="onRadioGroupFourRadioButtonClicked"
                android:text="Bukola Saraki" />

            <RadioButton
                android:id="@+id/radio_group_question_four_id_four"
                style="@style/RadioButtonAttribute"
                android:onClick="onRadioGroupFourRadioButtonClicked"
                android:text="None of the Above" />
        </RadioGroup>

        <View style="@style/ViewAttributes" />

        <TextView
            style="@style/TextViewAttribute"
            android:text="Q5. Without a good _____________, a car cannot start" />

        <CheckBox
            android:id="@+id/checkbox_question_five_id_one"
            style="@style/CheckBoxAttributes"
            android:onClick="onCheckBoxFiveClicked"
            android:text="road" />

        <CheckBox
            android:id="@+id/checkbox_question_five_id_two"
            style="@style/CheckBoxAttributes"
            android:onClick="onCheckBoxFiveClicked"
            android:text="paint" />

        <CheckBox
            android:id="@+id/checkbox_question_five_id_three"
            style="@style/CheckBoxAttributes"
            android:onClick="onCheckBoxFiveClicked"
            android:text="president" />

        <CheckBox
            android:id="@+id/checkbox_question_five_id_four"
            style="@style/CheckBoxAttributes"
            android:onClick="onCheckBoxFiveClicked"
            android:text="engine" />

        <View style="@style/ViewAttributes" />

        <TextView
            style="@style/TextViewAttribute"
            android:text="Q6. How many centimetres equals a decimetre?" />

        <RadioGroup
            android:id="@+id/radio_group_question_six"
            style="@style/RadioGroupAttribute"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio_group_question_six_id_one"
                style="@style/RadioButtonAttribute"
                android:onClick="onRadioGroupSixRadioButtonClicked"
                android:text="100" />

            <RadioButton
                android:id="@+id/radio_group_question_six_id_two"
                style="@style/RadioButtonAttribute"
                android:onClick="onRadioGroupSixRadioButtonClicked"
                android:text="10" />

            <RadioButton
                android:id="@+id/radio_group_question_six_id_three"
                style="@style/RadioButtonAttribute"
                android:onClick="onRadioGroupSixRadioButtonClicked"
                android:text="10000" />

            <RadioButton
                android:id="@+id/radio_group_question_six_id_four"
                style="@style/RadioButtonAttribute"
                android:onClick="onRadioGroupSixRadioButtonClicked"
                android:text="0.01" />
        </RadioGroup>

        <View style="@style/ViewAttributes" />

        <TextView
            style="@style/TextViewAttribute"
            android:text="Q7. How many states do we have in Nigeria?" />

        <RadioGroup
            android:id="@+id/radio_group_question_seven"
            style="@style/RadioGroupAttribute"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio_group_question_seven_id_one"
                style="@style/RadioButtonAttribute"
                android:onClick="onRadioGroupSevenRadioButtonClicked"
                android:text="26"/>

            <RadioButton
                android:id="@+id/radio_group_question_seven_id_two"
                style="@style/RadioButtonAttribute"
                android:onClick="onRadioGroupSevenRadioButtonClicked"
                android:text="36" />

            <RadioButton
                android:id="@+id/radio_group_question_seven_id_three"
                style="@style/RadioButtonAttribute"
                android:onClick="onRadioGroupSevenRadioButtonClicked"
                android:text="96" />

            <RadioButton
                android:id="@+id/radio_group_question_seven_id_four"
                style="@style/RadioButtonAttribute"
                android:onClick="onRadioGroupSevenRadioButtonClicked"
                android:text="774" />
        </RadioGroup>

        <View style="@style/ViewAttributes" />

        <TextView
            style="@style/TextViewAttribute"
            android:text="Q8. What is the correct spelling of Nigeria's president name?" />

        <CheckBox
            android:id="@+id/checkbox_question_eight_id_one"
            style="@style/CheckBoxAttributes"
            android:onClick="onCheckBoxEightClicked"
            android:text="Boo harry" />

        <CheckBox
            android:id="@+id/checkbox_question_eight_id_two"
            style="@style/CheckBoxAttributes"
            android:onClick="onCheckBoxEightClicked"
            android:text="Buhari" />

        <CheckBox
            android:id="@+id/checkbox_question_eight_id_three"
            style="@style/CheckBoxAttributes"
            android:onClick="onCheckBoxEightClicked"
            android:text="Boary" />

        <CheckBox
            android:id="@+id/checkbox_question_eight_id_four"
            style="@style/CheckBoxAttributes"
            android:onClick="onCheckBoxEightClicked"
            android:text="Bohary" />

        <View style="@style/ViewAttributes" />

        <TextView
            style="@style/TextViewAttribute"
            android:text="Q9. How many sky do we have in the world?" />

        <RadioGroup
            android:id="@+id/radio_group_question_nine"
            style="@style/RadioGroupAttribute"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio_group_question_nine_id_one"
                style="@style/RadioButtonAttribute"
                android:onClick="onRadioGroupNineRadioButtonClicked"
                android:text="Unknown" />

            <RadioButton
                android:id="@+id/radio_group_question_nine_id_two"
                style="@style/RadioButtonAttribute"
                android:onClick="onRadioGroupNineRadioButtonClicked"
                android:text="One" />

            <RadioButton
                android:id="@+id/radio_group_question_nine_id_three"
                style="@style/RadioButtonAttribute"
                android:onClick="onRadioGroupNineRadioButtonClicked"
                android:text="100 billion" />

            <RadioButton
                android:id="@+id/radio_group_question_nine_id_four"
                style="@style/RadioButtonAttribute"
                android:onClick="onRadioGroupNineRadioButtonClicked"
                android:text="None of the above" />
        </RadioGroup>

        <View style="@style/ViewAttributes" />

        <TextView
            style="@style/TextViewAttribute"
            android:text="Q10. The meaning of love is?" />

        <RadioGroup
            android:id="@+id/radio_group_question_ten"
            style="@style/RadioGroupAttribute"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio_group_question_ten_id_one"
                style="@style/RadioButtonAttribute"
                android:onClick="onRadioGroupTenRadioButtonClicked"
                android:text="like turns love" />

            <RadioButton
                android:id="@+id/radio_group_question_ten_id_two"
                style="@style/RadioButtonAttribute"
                android:onClick="onRadioGroupTenRadioButtonClicked"
                android:text="Dependant on one by the other" />

            <RadioButton
                android:id="@+id/radio_group_question_ten_id_three"
                style="@style/RadioButtonAttribute"
                android:onClick="onRadioGroupTenRadioButtonClicked"
                android:text="sex" />

            <RadioButton
                android:id="@+id/radio_group_question_ten_id_four"
                style="@style/RadioButtonAttribute"
                android:onClick="onRadioGroupTenRadioButtonClicked"
                android:text="family" />
        </RadioGroup>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:background="#ee98fb"
            android:onClick="onSubmit"
            android:text="submit"
            android:textColor="@android:color/black" />
    </LinearLayout>
</ScrollView>